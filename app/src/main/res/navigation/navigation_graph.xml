<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.movie.list.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_movie_list_toDetail"
            app:destination="@id/movieDetailFragment"/>
        <action
            android:id="@+id/action_movie_list_toPagedMovies"
            app:destination="@+id/pagedMoviesListFragment"/>
    </fragment>

    <fragment
        android:id="@+id/pagedMoviesListFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.movie.list.PagedMoviesListFragment"
        android:label="fragment_paged_movies"
        tools:layout="@layout/fragment_paged_movies_list">
        <argument
            android:name="sortType"
            app:argType="com.github.androidpirate.capsulereviews.util.internal.SortType"
            android:defaultValue="POPULAR"/>
        <action
            android:id="@+id/action_paged_movie_list_to_list"
            app:destination="@id/movieListFragment"/>
        <action
            android:id="@+id/action_paged_movie_list_to_detail"
            app:destination="@id/movieDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/tvListFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.tv.list.TvListFragment"
        android:label="fragment_tv_list"
        tools:layout="@layout/fragment_tv_list">
        <action
            android:id="@+id/action_tv_list_toDetail"
            app:destination="@id/tvDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search"/>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.favorites.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites"/>

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more"/>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.movie.detail.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movieId"
            app:argType="integer"
            android:defaultValue="0"/>
        <action
            android:id="@+id/action_movie_detail_toList"
            app:destination="@id/movieListFragment"/>
        <action
            android:id="@+id/action_movieDetailFragment_self"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/tvDetailFragment"
        android:name="com.github.androidpirate.capsulereviews.ui.tv.detail.TvDetailFragment"
        android:label="fragment_tv_detail"
        tools:layout="@layout/fragment_tv_detail">
        <argument
            android:name="showId"
            app:argType="integer"
            android:defaultValue="0"/>
        <action
            android:id="@+id/action_tv_detail_toList"
            app:destination="@id/tvListFragment"/>
        <action
            android:id="@+id/action_tvDetailFragment_self"
            app:destination="@id/tvDetailFragment" />
    </fragment>

</navigation>